# Environment Configuration

# Database Configuration
DATABASE_URL=sqlite:///./judge0.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost:5432/judge0

# API Settings
API_HOST=0.0.0.0
API_PORT=8080
DEBUG=true

# Worker Configuration
MAX_WORKERS=4
WORKER_TIMEOUT=300
CONTAINER_MEMORY_LIMIT=512m
CONTAINER_CPU_LIMIT=1
CONTAINER_CLEANUP_INTERVAL=60

# Security Settings
SECRET_KEY=your-secret-key-change-this-in-production
ALLOWED_HOSTS=localhost,127.0.0.1

# Container Configuration
DOCKER_NETWORK_DISABLED=true
DOCKER_READONLY_ROOTFS=true
DOCKER_NO_NEW_PRIVILEGES=true

# Language Image Configuration
PYTHON3_IMAGE=judge0/python3:latest
JAVASCRIPT_IMAGE=judge0/javascript:latest
JAVA_IMAGE=judge0/java:latest
CPP_IMAGE=gcc:latest